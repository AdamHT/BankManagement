<LoginPage>:
    id: login_page
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3

    
    BoxLayout:
        size_hint_y: None
        height: 50
        Label:
            text: "Coleman Banking"
            bold: True
            font_size: 70

    BoxLayout:
        orientation: "vertical"
        #spacing: 20
        padding: login_page.space_x, 10
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Spinner:
                id: account_type
                text: 'Accounts'
                values: ('Admin', 'Teller')
                background_color: 0.2, 0.2, 0.8, 1
            TextInput:
                id: username
                multiline: False
                hint_text: "Username"
            TextInput:
                id: password
                password: True # hide password
                multiline: False
                hint_text: "Password"
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Sign In"
            size_hint_y: None
            height: 40
            on_release: root.verify_credentials()

        Label:
            id: sp2
    

<AdminPage>:
    BoxLayout:
        
        TabbedPanel:
            id: tab_panel
            tab_pos: 'top_mid'
            do_default_tab: False
            

            TabbedPanelItem:
                text: 'Account Type'
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: "back"
                        on_release: app.root.current = "login"

            TabbedPanelItem:
                text: '2'

            TabbedPanelItem:
                text: '3'
        Button:
            text: "Admin"

<TellerPage>:
    BoxLayout:
        
        TabbedPanel:
            id: tab_panel
            tab_pos: 'top_mid'
            do_default_tab: False
            

            TabbedPanelItem:
                text: 'Account Type'
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: "back"
                        on_release: app.root.current = "login"

            TabbedPanelItem:
                text: '2'

            TabbedPanelItem:
                text: '3'
        Button:
            text: "Teller"

    


<ScreenManagement>:
    id: screen_manager
    login_page: login_page
    admin_page: admin_page
    teller_page: teller_page

    LoginPage:
        id: login_page
        name: "login"
        manager: screen_manager
    AdminPage:
        id: admin_page
        name: "admin"
        manager: screen_manager
    TellerPage:
        id: teller_page
        name: "teller"
        manager: screen_manager